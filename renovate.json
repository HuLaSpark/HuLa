{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": false,
  "dependencyDashboard": true,
  "ignoreDeps": [],
  "labels": ["dependencies"],
  "postUpdateOptions": ["yarnDedupeHighest"],
  "prConcurrentLimit": 30,
  "prHourlyLimit": 4,
  "rebaseWhen": "conflicted",
  "schedule": "on sunday at 9:00am",
  "timezone": "Asia/Shanghai",
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "automerge": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "groupName": "Tauri dependencies",
      "groupSlug": "Tauri-deps",
      "matchPackageNames": ["/@tauri-apps*/"]
    },
    {
      "groupName": "UnoCSS dependencies",
      "groupSlug": "UnoCSS-deps",
      "matchPackageNames": ["/@unocss*/"]
    },
    {
      "description": "Rust crate updates",
      "matchManagers": ["cargo"],
      "groupName": "Rust dependencies",
      "groupSlug": "rust-deps"
    }
  ],
  "updateInternalDeps": true
}
