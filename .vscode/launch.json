{
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Tauri Development Debug",
      "cargo": {
        "args": [
          "run",
          "--manifest-path=./src-tauri/Cargo.toml",
          "--no-default-features"
        ]
      },
      // task for the `beforeDevCommand` if used, must be configured in `.vscode/tasks.json`
      "preLaunchTask": "ui:idev"
    },
    {
      "type": "node-terminal",
      "name": "tauri:dev",
      "request": "launch",
      "command": "pnpm run tauri:dev",
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node-terminal",
      "name": "tauri:ios:dev",
      "request": "launch",
      "command": "pnpm run tauri:ios:dev",
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node-terminal",
      "name": "tauri:android:dev",
      "request": "launch",
      "command": "pnpm run tauri:android:dev",
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node-terminal",
      "name": "tauri:build",
      "request": "launch",
      "command": "pnpm run tauri:build",
      "cwd": "${workspaceFolder}"
    }
  ]
}
